doctype html 
html 
 head
  title 
  link(rel='stylesheet' href='/register.css')
 body
  include _header
  .div.forms
      h1 Please fill the form to login
      form#frm
        label Enter Email
        input(type='text' name='email')
        label Enter Password
        input(type='password' name='paswd')
        input(type='submit' value='Click To Login' id='btn')
        p#link Don't have an account? 
         br
         a(href='/signup') Sign up here

  script.

       let user = {}
      document.getElementById('frm').addEventListener('submit', (e) => {
        e.preventDefault();
        let data = new FormData(e.target);
        data.forEach((v,i)=>{
            user[i] = v;
        })

        fetch('http://localhost:3000/logino',{
            method:'Post',
            headers:{
                'Content-Type':'application/json'
            },
            credentials: 'include',
            body:JSON.stringify(user)
        })
        .then((val)=>{
            if(val.ok){
                alert(`logged in successful`)
                window.setTimeout(()=>location.assign('/dash'),1000)
            }
            else{
                alert(`incorrect loggins please try again`)
            }
        })
      
      })




      document.getElementById('board').addEventListener('click',(e)=>{
    e.preventDefault();
    fetch('http://localhost:3000/dash')
     .then(val=>{
      if(!val.ok){
         val.json()
         .then(ans=>{
          if(ans.status==='unauthorize'){alert(ans.message); location.reload(true);}
          else{
            alert(ans.message); location.reload(true)
          }
         })
      }else{
        window.setTimeout(()=>location.assign('/dash'),1000)
      }
     })

   })
 
        
